<!DOCTYPE html>
<html>
<head>
<title>facespace</title>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>
</head>
<body>
  <section class="header-container">
    <div class="logo">
      <h1>facespace</h1>
      <div class="login">
        <% if signed_in? %>
          <p>You are signed in as <%= current_user.username %></p>
          <%= link_to "sign-out", :session, method: :delete %>
        <% else %>
          <p><%= link_to "sign-up", [:new, :user] %></p>
          <p><%= link_to "sign-in", [:new, :session] %></p>
        <% end %>
    </div>
    <div>
      <% if flash.any? %>
        <div class="error">
          <span><%= flash[:notice] %></span>
        </div>
    </div>
    <% end %>
  </section>

  <%= yield %>

</body>
<script src="//js.pusher.com/2.2/pusher.min.js"></script>
</html>
