<div class="chatroom">
  <ul class="messages">
    <%= render @messages %>
  </ul>
</div>

<div class="chat-form">
  <%= form_for @message do |form| %>
    <%= form.text_area :body, placeholder: "Type message here" %>
    <%= form.hidden_field :image, value: "" %>
    <%= form.submit "Send Message", class: "message-button" %>
  <% end %>
</div>

<div id="online_users">
  <%= render "online_users", online_users: @online_users %>
</div>

<%= javascript_tag do %>
  window.PUSHER_KEY = "<%= ENV.fetch("PUSHER_KEY") %>";
<% end %>

<div>
  <img src="" width="160" height="120">
</div>

<video autoplay></video>
<canvas id="video-canvas" style="display:none;" width="640" height="480"></canvas>

<div class="best-of">
  <div class="rotate90">
    Best of FaceSpace
    <%= render @messages.top_five %>
  </div>
</div>
