<li class="block">
  <%= image_tag message.image.url, class: "image-show" %>
  <p id="body"><%= message.body %></p>
  <p id="time"><%= time_ago_in_words(message.created_at) %> ago</p>
  <div class="voting">
  <p> <%= link_to "Vote up", [message, :upvote], method: :post %> 
<%= link_to "Vote down", [message, :downvote], method: :post %></p>
<p>Total Votes: <%= message.score %></p>
</div>
</li>
